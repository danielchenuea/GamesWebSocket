@{
    ViewBag.Title = "Index";
}

@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<div class="chatContainer">
    <div class="halfContainer">
        <div class="chatRow">
            <p id="LoginLog"></p>
            <input type="text" id="Username" placeholder="Username" />
            <button id="SendLogin">Login</button>
            <button id="SendLogout">Logout</button>
        </div>
        <div class="chatRow">
            <button id="CreateRoom">Create and Enter Room</button>
        </div>
        <div class="chatRow">
            <input type="text" id="RoomCode" placeholder="Room Code" />
            <button id="EnterRoom">Enter Room</button>
            <button id="LeaveRoom">Leave Room</button>
        </div>
        <div class="chatRow">
            <input type="text" id="Message" placeholder="Message" />
            <button id="SendMessage">Send Message</button>
        </div>
        <div class="chatRow">
            <input type="text" id="ToUser" placeholder="To User" />
            <input type="text" id="PrivateMessage" placeholder="Message" />
            <button id="SendPrivateMessage">Send Private Message</button>
        </div>
    </div>
    <div class="halfContainer">
        <div class="chatList">
            <h4 id="userLoggedTitle">Users Logged</h4>
            <ul id="userLogged">
            </ul>
        </div>
        <div class="chatList">
            <h4 id="chatLogTitle">Chat Log</h4>
            <ul id="chatLog">
            </ul>
        </div>
        <div class="chatList">
            <h4 id="chatMessageTitle">Chat Messages</h4>
            <ul id="chatMessage">
            </ul>
        </div>
    </div>
</div>

@section Styles {

    <link rel="stylesheet" href="~/css/Home/ChatHubStyle.css">

}
@section Scripts {

    <script type="module" src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script type="module" src="~/js/Main/Views/ChatHub.js?v=@Configuration.GetValue(typeof(string), "VERSION")"></script>
}

